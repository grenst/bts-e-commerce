{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true, // for importing JSON files
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "preserve",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "types": ["jest", "node"] // Add types for Jest and Node
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", ".eslintrc.cjs", "jest.config.cjs", "prettier.config.cjs", "vite.config.ts"] // Exclude build output, node_modules and config files
}
